@model EmployeeDetailsViewModel

@{
    ViewBag.Title = "Employee Details Page";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "noimages.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Department: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Employee.Id">Edit</a>
            </div>
        </div>
    </div>
</div>